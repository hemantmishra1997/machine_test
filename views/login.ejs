<html>
<head>
    <title>task</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <style>
    #hadder
    {
        background: whitesmoke;
        width: 100%;
        height: 70px;
        padding: 1px 0 0 0;
    }
  </style>
</head>
<body>
    <div class="container">
        <div id="hadder">
          <center>
              <h1>Ragister form</h1>
          </center>
      </div>
      <br><br><br>
      <a href="/">
        <button type="button" class="btn btn-primary">show data</button>
         </a>
      <center>
        <small><%- output %></small>

      </center>
        <h2 style="color: red;">user Details</h2>
    <form class="form-horizontal" method="post" action="/login">
        <div class="form-group">
          <label class="control-label col-sm-2" for="name">name:</label>
          <div class="col-sm-10">
            <input type="name" class="form-control" name="name" id="name" placeholder="Enter name">
          </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">email:</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">mobile:</label>
            <div class="col-sm-10">
              <input type="mobile" class="form-control" name="mobile" id="mobile" placeholder="Enter mobile">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">notes:</label>
            <div class="col-sm-10">
              <textarea class="form-control" name="notes" id="mobile" placeholder="Enter notes"></textarea>
            </div>
          </div>
          <hr>
          <h2 style="color: red;">User Address</h2>
          <br>
        <div class="form-group">
          <label class="control-label col-sm-2" for="pwd">Apartment Number</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="apartment" id="apartment" placeholder="Enter Apartment Number">
          </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">address</label>
            <div class="col-sm-10">
              <textarea class="form-control" name="address" id="address" placeholder="Enter address"></textarea>
            </div>
        </div>    
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">pin code</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" name="pin" id="pin" placeholder="Enter pin code">
            </div>
          </div>  
          <hr>
          <h2 style="color: red;">credit card details</h2>
          <br>
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">card Details</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="card" id="card" placeholder="Enter card details">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">token id</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" name="token" id="token" placeholder="Enter token id">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="name">Last Four digit</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" name="four_digit" id="four_digit" placeholder="Enter last four digit">
            </div>
          </div>
        
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Submit</button>
          </div>
        </div>
      </form>
    </div>  
</body>
</html>